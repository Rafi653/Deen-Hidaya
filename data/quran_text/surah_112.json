      "sajdah_number": null,
      "text_uthmani": " قُلْ هُوَ ٱللَّهُ أَحَدٌ",
      "text_imlaei": "قُلْ هُوَ اللَّهُ أَحَدٌ",
      "page_number": 604,
      "juz_number": 30,
      "translations": [
        {
          "id": 96391,
          "resource_id": 20,
          "text": "Say, \"He is Allāh, [who is] One,<sup foot_note=197829>1</sup>"
        },
        {
          "id": 1172818,
          "resource_id": 213,
          "text": "বলুন [১] , ‘তিনি আল্লাহ্, এক-অদ্বিতীয় [২] ,"
        }
      ]
    },
    {
      "id": 6223,
      "verse_number": 2,
      "verse_key": "112:2",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 556,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "ٱللَّهُ ٱلصَّمَدُ",
      "text_imlaei": "اللَّهُ الصَّمَدُ",
      "page_number": 604,
      "juz_number": 30,
      "translations": [
        {
          "id": 96393,
          "resource_id": 20,
          "text": "Allāh, the Eternal Refuge.<sup foot_note=197830>1</sup>"
        },
        {
          "id": 1172819,
          "resource_id": 213,
          "text": "‘আল্লাহ্ হচ্ছেন ‘সামাদ' [১] (তিনি কারো মুখাপেক্ষী নন, সকলেই তাঁর মুখাপেক্ষী);"
        }
      ]
    },
    {
      "id": 6224,
      "verse_number": 3,
      "verse_key": "112:3",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 556,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "لَمْ يَلِدْ وَلَمْ يُولَدْ",
      "text_imlaei": "لَمْ يَلِدْ وَلَمْ يُولَدْ",
      "page_number": 604,
      "juz_number": 30,
      "translations": [
        {
          "id": 96395,
          "resource_id": 20,
          "text": "He neither begets nor is born,"
        },
        {
          "id": 1172820,
          "resource_id": 213,
          "text": "তিনি কাউকেও জন্ম দেননি এবং তাঁকেও জন্ম দেয়া হয়নি [১] ,"
        }
      ]
    },
    {
      "id": 6225,
      "verse_number": 4,
      "verse_key": "112:4",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 556,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَلَمْ يَكُن لَّهُۥ كُفُوًا أَحَدٌۢ",
      "text_imlaei": "وَلَمْ يَكُن لَّهُ كُفُوًا أَحَدٌ",
      "page_number": 604,
      "juz_number": 30,
      "translations": [
        {
          "id": 96397,
          "resource_id": 20,
          "text": "Nor is there to Him any equivalent.\""
        },
        {
          "id": 1172821,
          "resource_id": 213,
          "text": "‘এবং তাঁর সমতুল্য কেউই নেই [১]।’"
        }
      ]
    }
