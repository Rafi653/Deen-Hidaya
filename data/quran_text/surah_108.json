  "verses": [
    {
      "id": 6205,
      "verse_number": 1,
      "verse_key": "108:1",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 552,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": " إِنَّآ أَعْطَيْنَـٰكَ ٱلْكَوْثَرَ",
      "text_imlaei": "إِنَّا أَعْطَيْنَاكَ الْكَوْثَرَ",
      "page_number": 602,
      "juz_number": 30,
      "translations": [
        {
          "id": 96313,
          "resource_id": 20,
          "text": "Indeed, We have granted you, [O Muḥammad], al-Kawthar."
        },
        {
          "id": 1172801,
          "resource_id": 213,
          "text": "নিশ্চয় আমরা আপনাকে কাউছার [১] দান করেছি।"
        }
      ]
    },
    {
      "id": 6206,
      "verse_number": 2,
      "verse_key": "108:2",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 552,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "فَصَلِّ لِرَبِّكَ وَٱنْحَرْ",
      "text_imlaei": "فَصَلِّ لِرَبِّكَ وَانْحَرْ",
      "page_number": 602,
      "juz_number": 30,
      "translations": [
        {
          "id": 96315,
          "resource_id": 20,
          "text": "So pray to your Lord and offer sacrifice [to Him alone]."
        },
        {
          "id": 1172802,
          "resource_id": 213,
          "text": "কাজেই আপনি আপনার রবের উদ্দেশ্যে সালাত আদায় করুন এবং কুরবানী করুন [১]।"
        }
      ]
    },
    {
      "id": 6207,
      "verse_number": 3,
      "verse_key": "108:3",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 552,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ شَانِئَكَ هُوَ ٱلْأَبْتَرُ",
      "text_imlaei": "إِنَّ شَانِئَكَ هُوَ الْأَبْتَرُ",
      "page_number": 602,
      "juz_number": 30,
      "translations": [
        {
          "id": 96317,
          "resource_id": 20,
          "text": "Indeed, your enemy is the one cut off.<sup foot_note=197824>1</sup>"
        },
        {
          "id": 1172803,
          "resource_id": 213,
          "text": "নিশ্চয় আপনার প্রতি বিদ্বেষ পোষণকারীই তো নির্বংশ [১]।"
        }
      ]
    }
