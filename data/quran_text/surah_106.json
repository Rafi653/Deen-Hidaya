  "verses": [
    {
      "id": 6194,
      "verse_number": 1,
      "verse_key": "106:1",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 550,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": " لِإِيلَـٰفِ قُرَيْشٍ",
      "text_imlaei": "لِإِيلَافِ قُرَيْشٍ",
      "page_number": 602,
      "juz_number": 30,
      "translations": [
        {
          "id": 96279,
          "resource_id": 20,
          "text": "For the accustomed security of the Quraysh<sup foot_note=197820>1</sup> -"
        },
        {
          "id": 1172790,
          "resource_id": 213,
          "text": "কুরাইশে[১]র আসক্তির কারণে [২],"
        }
      ]
    },
    {
      "id": 6195,
      "verse_number": 2,
      "verse_key": "106:2",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 550,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِۦلَـٰفِهِمْ رِحْلَةَ ٱلشِّتَآءِ وَٱلصَّيْفِ",
      "text_imlaei": "إِيلَافِهِمْ رِحْلَةَ الشِّتَاءِ وَالصَّيْفِ",
      "page_number": 602,
      "juz_number": 30,
      "translations": [
        {
          "id": 96281,
          "resource_id": 20,
          "text": "Their accustomed security [in] the caravan of winter and summer<sup foot_note=197821>1</sup> -"
        },
        {
          "id": 1172791,
          "resource_id": 213,
          "text": "তাদের আসক্তি আছে শীত ও গ্রীষ্মে সফরের [১]"
        }
      ]
    },
    {
      "id": 6196,
      "verse_number": 3,
      "verse_key": "106:3",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 550,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "فَلْيَعْبُدُوا۟ رَبَّ هَـٰذَا ٱلْبَيْتِ",
      "text_imlaei": "فَلْيَعْبُدُوا رَبَّ هَٰذَا الْبَيْتِ",
      "page_number": 602,
      "juz_number": 30,
      "translations": [
        {
          "id": 96283,
          "resource_id": 20,
          "text": "Let them worship the Lord of this House,<sup foot_note=197822>1</sup>"
        },
        {
          "id": 1172792,
          "resource_id": 213,
          "text": "অতএব, তারা ‘ইবাদাত করুক এ ঘরের রবের [১],"
        }
      ]
    },
    {
      "id": 6197,
      "verse_number": 4,
      "verse_key": "106:4",
      "hizb_number": 60,
      "rub_el_hizb_number": 240,
      "ruku_number": 550,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "ٱلَّذِىٓ أَطْعَمَهُم مِّن جُوعٍ وَءَامَنَهُم مِّنْ خَوْفٍۭ",
      "text_imlaei": "الَّذِي أَطْعَمَهُم مِّن جُوعٍ وَآمَنَهُم مِّنْ خَوْفٍ",
      "page_number": 602,
      "juz_number": 30,
      "translations": [
        {
          "id": 96286,
          "resource_id": 20,
          "text": "Who has fed them, [saving them] from hunger and made them safe, [saving them] from fear."
        },
        {
          "id": 1172793,
          "resource_id": 213,
          "text": "যিনি তাদেরকে ক্ষুধায় খাদ্য দিয়েছেন [১] এবং ভীতি থেকে তাদেরকে নিরাপদ করেছেন [২]।"
        }
      ]
    }
  ],
