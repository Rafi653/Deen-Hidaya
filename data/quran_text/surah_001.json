  "verses": [
    {
      "id": 1,
      "verse_number": 1,
      "verse_key": "1:1",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ",
      "text_imlaei": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 1166597,
          "resource_id": 213,
          "text": "রহমান, রহীম [১] আল্লাহ্‌র নামে [২]"
        }
      ]
    },
    {
      "id": 2,
      "verse_number": 2,
      "verse_key": "1:2",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "ٱلْحَمْدُ لِلَّهِ رَبِّ ٱلْعَـٰلَمِينَ",
      "text_imlaei": "الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 1166598,
          "resource_id": 213,
          "text": "সকল ‘হাম্‌দ’ [১] আল্লাহ্‌র [২] , যিনি সৃষ্টিকুলের [৩] রব [৪],"
        }
      ]
    },
    {
      "id": 3,
      "verse_number": 3,
      "verse_key": "1:3",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ",
      "text_imlaei": "الرَّحْمَٰنِ الرَّحِيمِ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 1166599,
          "resource_id": 213,
          "text": "দয়াময়, পরম দয়ালু [১],"
        }
      ]
    },
    {
      "id": 4,
      "verse_number": 4,
      "verse_key": "1:4",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "مَـٰلِكِ يَوْمِ ٱلدِّينِ",
      "text_imlaei": "مَالِكِ يَوْمِ الدِّينِ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 1166600,
          "resource_id": 213,
          "text": "বিচার দিনের মালিক [১]।"
        }
      ]
    },
    {
      "id": 5,
      "verse_number": 5,
      "verse_key": "1:5",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ",
      "text_imlaei": "إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 1166601,
          "resource_id": 213,
          "text": "আমরা শুধু আপনারই ‘ইবাদাত [১] করি [২], এবং শুধু আপনারই সাহায্য প্রার্থনা করি [৩],"
        }
      ]
    },
    {
      "id": 6,
      "verse_number": 6,
      "verse_key": "1:6",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "ٱهْدِنَا ٱلصِّرَٰطَ ٱلْمُسْتَقِيمَ",
      "text_imlaei": "اهْدِنَا الصِّرَاطَ الْمُسْتَقِيمَ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 1166602,
          "resource_id": 213,
          "text": "আমাদেরকে সরল পথের হিদায়াত দিন [১]"
        }
      ]
    },
    {
      "id": 7,
      "verse_number": 7,
      "verse_key": "1:7",
      "hizb_number": 1,
      "rub_el_hizb_number": 1,
      "ruku_number": 1,
      "manzil_number": 1,
      "sajdah_number": null,
      "text_uthmani": "صِرَٰطَ ٱلَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ ٱلْمَغْضُوبِ عَلَيْهِمْ وَلَا ٱلضَّآلِّينَ",
      "text_imlaei": "صِرَاطَ الَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ الْمَغْضُوبِ عَلَيْهِمْ وَلَا الضَّالِّينَ",
      "page_number": 1,
      "juz_number": 1,
      "translations": [
        {
          "id": 1166603,
          "resource_id": 213,
          "text": "তাদের পথ, যাদেরকে আপনি নি‘আমত দিয়েছেন [১], যাদের উপর আপনার ক্রোধ আপতিত হয়নি [২] এবং যারা পথভ্রষ্টও নয় [৩]"
        }
      ]
    }
  ],
