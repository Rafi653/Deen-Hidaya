  "surah_info": {
    "id": 92,
    "revelation_place": "makkah",
    "revelation_order": 9,
    "bismillah_pre": true,
    "name_simple": "Al-Layl",
    "name_complex": "Al-Layl",
    "name_arabic": "الليل",
    "verses_count": 21,
