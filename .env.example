# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=deen_hidaya
POSTGRES_USER=deen_user
POSTGRES_PASSWORD=change_this_password_in_production

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration
FRONTEND_PORT=3000

# API Configuration
API_BASE_URL=http://localhost:8000

# Security
SECRET_KEY=change_this_to_a_random_secret_key_in_production
ADMIN_TOKEN=dev_admin_token_change_in_production

# OpenAI Configuration (for embeddings)
# OPENAI_API_KEY=your_openai_api_key_here
# EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=384
EMBEDDING_BACKEND=sbert
# Optional: Choose a different model (default is paraphrase-multilingual-MiniLM-L12-v2)
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# Optional: Use GPU if available (default is "cpu")
EMBEDDING_DEVICE=cpu

# Environment
NODE_ENV=development
PYTHON_ENV=development
