# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=deen_hidaya
POSTGRES_USER=deen_user
POSTGRES_PASSWORD=change_this_password_in_production

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration
FRONTEND_PORT=3000

# API Configuration
API_BASE_URL=http://localhost:8000

# Security
SECRET_KEY=change_this_to_a_random_secret_key_in_production
ADMIN_TOKEN=dev_admin_token_change_in_production

# Embedding Configuration
# Backend options: 'auto', 'openai', 'sentence-transformers', 'disabled'
# - 'auto': Auto-detect (tries sentence-transformers first, then openai, then disabled)
# - 'openai': Use OpenAI API (requires OPENAI_API_KEY, has costs)
# - 'sentence-transformers': Use free local models (recommended, no API key needed)
# - 'disabled': Disable embeddings, use full-text search only
EMBEDDING_BACKEND=auto

# OpenAI Configuration (only needed if using 'openai' backend)
# Note: OpenAI has usage costs (~$0.0001 per 1K tokens)
OPENAI_API_KEY=your_openai_api_key_here

# Embedding Model Configuration
# For OpenAI: text-embedding-ada-002 (1536 dimensions)
# For sentence-transformers: 
#   - paraphrase-multilingual-MiniLM-L12-v2 (384 dim, recommended for multilingual)
#   - all-MiniLM-L6-v2 (384 dim, fast, English-focused)
#   - all-mpnet-base-v2 (768 dim, highest quality, English-focused)
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIMENSION=384

# Search Configuration
# Enable semantic search (requires embeddings to be generated)
# If false, only full-text search will be used
ENABLE_SEMANTIC_SEARCH=false

# Cache Configuration (Optional - improves performance)
# ENABLE_CACHE=false
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Environment
NODE_ENV=development
PYTHON_ENV=development
